.uap-dashboard-wrapper > * {
    flex-shrink: 0;
}

.uap-dashboard-wrapper .uap-sidebar {
    order: 1 !important;
}

.uap-dashboard-wrapper .uap-dashboard-content {
    order: 2 !important;
}

